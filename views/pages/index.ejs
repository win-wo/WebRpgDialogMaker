<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/css %>
</head>

<body ng-app="WebRpgDialogMaker" ng-controller="mainController as main">
    <header>
        <title>{{main.appName}}</title>
    </header>
    <main class="container" ng-hide>
        <div class="row">
            <div class="col-sm-12">
                <h1>{{main.appName}}</h1>
            </div>
        </div>
        <div ng-controller="chaptrController as chaptr"></div>
        <section id="tools">
            <div class="row">
                <div class="col-sm-12">
                    <h2>Tools</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <textarea class="form-control" ng-model="chaptr.data"></textarea>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <button class="btn btn-default" ng-click="chaptr.loadData()">Load</button>
                                <button class="btn btn-default" ng-click="chaptr.refreshData()">Refresh</button>
                                <button class="btn btn-default" ng-click="chaptr.exportData()">Export</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="details">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        Chapter name : 
                        <input type="text" class="form-control" ng-model="chaptr.chapter.name">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        Chapter id : 
                        <input type="text" class="form-control" readonly ng-model="chaptr.chapter.id">
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        Language : 
                        <input type="text" class="form-control" ng-model="chaptr.chapter.language">
                    </div>
                </div>
            </div>
            <hr>
            <h3>Dialogs</h3>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#newDialogModal">
                            New
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-responsive">
                        <tr>
                            <th>Key</th>
                            <th>Controls</th>
                        </tr>
                        <tr>
                            <td>dialog-1</td>
                            <td>
                                <button class="btn btn-default">Select</button>
                                <button class="btn btn-danger">Delete</button>
                                <button class="btn btn-default">Run</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="col-sm-12">
                <h2>Demo</h2>
            </div>
        </div>
        <div class="modal fade" id="newDialogModal" tabindex="-1" role="dialog" aria-labelledby="newDialogModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="newDialogModalLabel">New Dialog</h4>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
    </footer>
    <% include ../partials/js %>
</body>

</html>