<div class="component">
    <h2>Chapter</h2>

    <div class="row">
        <div class="col-sm-12">
            <button class="btn btn-primary btn-sm" {{action "saveEverything"}}><i class="fa fa-floppy-o" ></i> Save everything</button>
            <button class="btn btn-primary btn-sm" {{action "clearEverything"}}><i class="fa fa-refresh" ></i> Clear everything</button>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                Chapter Name : {{input value=chapter.name class="form-control"}}
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                Chapter Number : {{input value=chapter.number class="form-control"}}
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                Chapter Language (e.g. en,fr) : {{input value=chapter.language class="form-control"}}
            </div>
        </div>
    </div>
    <h3>Dialogs</h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                {{#link-to "dialog.add" class="btn btn-default btn-sm"}}<i class="fa fa-plus"></i>{{/link-to}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-responsive">
                <tr>
                    <th>Key</th>
                    <th>Actions</th>
                </tr>
                <tr>
                    <td>
                        <button class="btn btn-warning btn-sm" title="Edit the current dialog">
                            <i class="fa fa-pencil"></i>
                        </button>
                        <button class="btn btn-warning btn-sm" title="Duplicate the current dialog">
                            <i class="fa fa-copy"></i>
                        </button>
                        <button class="btn btn-default btn-sm" title="Move up the current dialog">
                            <i class="fa fa-arrow-up"></i>
                        </button>
                        <button class="btn btn-default btn-sm" title="Move down the current dialog">
                            <i class="fa fa-arrow-down"></i>
                        </button>
                        <button class="btn btn-danger btn-sm" title="Remove the current dialog">
                            <i class="fa fa-times"></i>
                        </button>
                        <button class="btn btn-success btn-sm" title="Run the current dialog in the demo viewer">
                            <i class="fa fa-laptop"></i>
                        </button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>